<% if chat.messages.length > 0 %>
  <div>
    <p> Logo </p>
    <div>
      <% @sender = User.find(chat.user_id)  %>
      <p> <%= @sender.first_name   %> <%= @sender.last_name %> </p>
      <small> <em> <%= chat.messages.last.body %> </em> </small>
    </div>
    <p> <%= chat.updated_at %> </p>
  </div>
<% end %>
